<p id="notice"><%= notice %></p>

<h1>Lista Pinów</h1>

<table>
  <thead>
    <tr>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.decription %></td>
        <td><%= link_to 'Pokarz', pin %></td>
        <td><%= link_to 'Edytuj', edit_pin_path(pin) %></td>
        <td><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy Pin', new_pin_path %>
